[Unit]
Description=Availability Monitoring Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/availability https://example.com/example_nodes.json node0.example.com 564 843
Restart=always
RestartSec=0
User=nobody
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target